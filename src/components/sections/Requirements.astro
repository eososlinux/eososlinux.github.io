---
import desktopIcon from "../../assets/img/pc.png";
---

<section id="requirements">
  <div
    class="card flex flex-row items-center bg-[rgba(30,30,45,0.9)] rounded-md gap-4 w-full max-w-7xl p-8 border-2 [border-color:#fab387]"
  >
    <div class="flex flex-col justify-center align-middle w-[65%]">
      <h2 class="font-bold title">System Requirements</h2>
      <table class="text-left">
        <thead>
          <tr>
            <th>Component</th>
            <th>Minimum</th>
            <th>Recommended</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td class="font-bold">Processor</td>
            <td>64-bit</td>
            <td>64-bit</td>
          </tr>
          <tr>
            <td class="font-bold">RAM</td>
            <td>4 GB</td>
            <td>8 GB</td>
          </tr>
          <tr>
            <td class="font-bold">Disk Space</td>
            <td>80 GB</td>
            <td>120 GB</td>
          </tr>
          <tr>
            <td class="font-bold">Disk Type</td>
            <td>HDD</td>
            <td>SSD</td>
          </tr>
          <tr>
            <td class="font-bold">Graphics</td>
            <td>OpenGL 3.0 compatible</td>
            <td>OpenGL 4.5 compatible</td>
          </tr>
          <tr>
            <td class="font-bold">Network</td>
            <td>Internet connection</td>
            <td>Internet connection</td>
          </tr>
        </tbody>
      </table>
      <!-- Ícono y nombre de Discord al final -->
      <a
        href="https://discord.gg/teVHYWsqtJ"
        target="_blank"
        rel="noopener noreferrer"
        aria-label="Discord"
        class="mt-6 inline-flex items-center gap-2 text-[#7289da] hover:underline"
      >
        <svg fill="currentColor" class="w-6 h-6" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
          <path d="M18.942 5.556a16.3 16.3 0 0 0-4.126-1.3 12.04 12.04 0 0 0-.529 1.1 15.175 15.175 0 0 0-4.573 0 11.586 11.586 0 0 0-.535-1.1 16.274 16.274 0 0 0-4.129 1.3 17.392 17.392 0 0 0-2.868 11.662 15.785 15.785 0 0 0 4.963 2.521c.41-.564.773-1.16 1.084-1.785a10.638 10.638 0 0 1-1.706-.83c.143-.106.283-.217.418-.331a11.664 11.664 0 0 0 10.118 0c.137.114.277.225.418.331-.544.328-1.116.606-1.71.832a12.58 12.58 0 0 0 1.084 1.785 16.46 16.46 0 0 0 5.064-2.595 17.286 17.286 0 0 0-2.973-11.59ZM8.678 14.813a1.94 1.94 0 0 1-1.8-2.045 1.93 1.93 0 0 1 1.8-2.047 1.918 1.918 0 0 1 1.8 2.047 1.929 1.929 0 0 1-1.8 2.045Zm6.644 0a1.94 1.94 0 0 1-1.8-2.045 1.93 1.93 0 0 1 1.8-2.047 1.919 1.919 0 0 1 1.8 2.047 1.93 1.93 0 0 1-1.8 2.045Z"/>
        </svg>
        Discord
      </a>
    </div>
    <div class="flex justify-center items-center mt-4">
      <img
        src={desktopIcon.src}
        alt="EosOS KDE Desktop"
        class="card-image w-full h-auto"
      />
    </div>
  </div>
</section>

<style>
  td:first-child {
    color: #fab387;
  }

  thead{
    color: #cba6f7;
  }
</style>
