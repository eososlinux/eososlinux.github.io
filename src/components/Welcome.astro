---
import desktopImage from "../assets/EosOS-plasma-descktop.png";
---

<!-- Sección Home -->
<section id="home">
  <div class="container">
    <h1>Welcome to EosOS Linux KDE Lite</h1>
    <p>
      Independent distribution based on Arch Linux, easy to use and highly
      customizable.
    </p>
  </div>
</section>
<section id="eos-card">
  <div class="card">
    <div class="card-image-wrapper">
      <img src={desktopImage.src} alt="EosOS KDE Desktop" class="card-image" />
    </div>

    <div class="card-text">
      <h2>EosOS Linux KDE Lite</h2>
      <ul>
        <li>Independent distribution based on Arch Linux</li>
        <li>Easy to use</li>
        <li>Highly customizable for everyone</li>
      </ul>
      <a
        href="https://drive.google.com/file/d/1ReaIxGbM7bUcvPehicN_f72Ygekn0BOQ/view?usp=drive_link"
        class="card-button"
      >
        Download
      </a>
    </div>
  </div>
</section>

<style>
  /* Reset y básico */
  body {
    margin: 0;
    font-family: Inter, sans-serif;
    background: #1e1e2d;
    color: #fff;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  /* Para que el contenido no quede tapado por el navbar fijo */
  #home {
    padding-top: 80px; /* Altura navbar + margen */
    padding-bottom: 3rem;
    text-align: center;
  }

  #home h1 {
    font-size: 3rem;
    margin-bottom: 1rem;
    color: #e6b2bb;
  }

  #home p {
    font-size: 1.25rem;
    max-width: 600px;
    margin: 0 auto;
    color: #ccc;
  }
</style>
