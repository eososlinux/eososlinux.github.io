---
import astroLogo from '../assets/astro.svg';
import background from '../assets/background.svg';
import desktopImage from '../assets/EosOS-plasma-descktop.png';
---
<!-- Menú / Navbar con íconos -->
<nav id="navbar">
  <div class="container">
    <a href="#home" class="logo">EosOS GNU/Linux</a>
    <ul class="nav-links">
      <li>
        <a href="#home">
          <!-- Ícono Home -->
          <svg viewBox="0 0 24 24" fill="currentColor" class="nav-icon">
            <path d="M10 20v-6h4v6h5v-8h3L12 3 2 12h3v8z"/>
          </svg>
          Home
        </a>
      </li>
      <li>
        <a href="#features">
          <!-- Ícono Features -->
          <svg viewBox="0 0 24 24" fill="currentColor" class="nav-icon">
            <path d="M12 2a10 10 0 1 0 10 10A10.011 10.011 0 0 0 12 2Zm0 18a8 8 0 1 1 8-8 8.009 8.009 0 0 1-8 8Zm-1-13h2v6h-2Zm0 8h2v2h-2Z"/>
          </svg>
          Requirements
        </a>
      </li>
    </ul>
  </div>
</nav>


<!-- Sección Home -->
<section id="home">
  <div class="container">
    <h1>Welcome to EosOS Linux KDE Lite</h1>
    <p>Independent distribution based on Arch Linux, easy to use and highly customizable.</p>
  </div>
</section>
<section id="eos-card">
  <div class="card">
    <div class="card-image-wrapper">
      <img src={desktopImage.src} alt="EosOS KDE Desktop" class="card-image" />
    </div>

    <div class="card-text">
      <h2>EosOS Linux KDE Lite</h2>
      <ul>
        <li>Independent distribution based on Arch Linux</li>
        <li>Easy to use</li>
        <li>Highly customizable for everyone</li>
      </ul>
      <a href="https://drive.google.com/file/d/1ReaIxGbM7bUcvPehicN_f72Ygekn0BOQ/view?usp=drive_link" class="card-button">
        Download
      </a>
    </div>
  </div>
</section>

