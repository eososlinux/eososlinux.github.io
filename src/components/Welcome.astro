---
import Brands from "./sections/Brands.astro";
import Download from "./sections/Download.astro";
import Install from "./sections/Install.astro";
import Requirements from "./sections/Requirements.astro";
import principalImage from "../assets/img/principal.png";
---

<section id="home" class="bg-no-repeat bg-cover bg-center" style={`background-image: url(${principalImage.src})`}>
  <div class="bg-[rgba(30,30,45,0.8)] backdrop-blur-md rounded-2xl p-8 max-w-7xl ">
    <h1 class="font-bold">Welcome to EosOS Linux</h1>
    <p class="mb-4">
      Independent distribution based on Arch Linux, easy to use and highly
      customizable.
    </p>
  </div>
</section>
<Brands />
<Requirements />
<Download />
<Install />

<style>
  #home {
    padding-top: 80px; /* Altura navbar + margen */
    padding-bottom: 3rem;
    text-align: center;
  }

  #home h1 {
    font-size: 3rem;
    margin-bottom: 1rem;
    color: #fab387;
  }

  #home p {
    font-size: 1.25rem;
    max-width: 600px;
    margin: 0 auto;
    color: #bac2de;
  }
</style>
