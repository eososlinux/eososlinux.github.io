---
import Download from "./sections/Download.astro";
import Install from "./sections/Install.astro";
import Requirements from "./sections/Requirements.astro";
---

<section id="home">
  <div class="card flex flex-row items-center bg-[rgba(30,30,45,0.9)] rounded-md gap-6 w-full max-w-7xl p-8 border-2 [border-color:#fab387]">

    <!-- Icono de PC -->
    <div class="flex justify-center items-center pr-4">
      <svg class="w-16 h-16 text-[#fab387]" fill="currentColor" viewBox="0 0 24 24">
        <path d="M3 3h18a1 1 0 0 1 1 1v13a1 1 0 0 1-1 1H3a1 1 0 0 1-1-1V4a1 1 0 0 1 1-1Zm0 2v11h18V5H3Zm7 13h4v1h5v2H5v-2h5v-1Z"/>
      </svg>
    </div>

    <!-- Columna para título y subtítulo -->
    <div class="flex flex-col text-center w-full">
      <h1 class="font-bold text-[72px] text-[#fab387]">Welcome to EosOS Linux</h1>
      <p class="mb-4 text-[25px] text-[#bac2de]">
        Independent distribution based on Arch Linux, easy to use and highly customizable.
      </p>
    </div>

  </div>
</section>

<Requirements />
<Download />
<Install />

<style>
  #home {
    padding-top: 80px; /* Altura navbar + margen */
    padding-bottom: 3rem;
    text-align: center;
  }

  #home h1 {
    font-size: 3rem;
    margin-bottom: 1rem;
    color: #fab387;
  }

  #home p {
    font-size: 1.25rem;
    max-width: 600px;
    margin: 0 auto;
    color: #bac2de;
  }
</style>
